{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "jsxImportSource": "@emotion/react",
    "paths": {
      "react": [
        "./node_modules/@types/react"
      ],
      "@pages/*": [
        "pages/*"
      ],
      "@pages": [
        "pages"
      ],
      "@containers/*": [
        "containers/*"
      ],
      "@containers": [
        "containers"
      ],
      "@components/*": [
        "components/*"
      ],
      "@components": [
        "components"
      ],
      "@lib/*": [
        "lib/*"
      ],
      "@lib": [
        "lib"
      ],
      "@constants/*": [
        "constants/*"
      ],
      "@constants": [
        "constants"
      ],
      "@modules/*": [
        "modules/*"
      ],
      "@modules": [
        "modules"
      ],
      "@public/*": [
        "public/*"
      ],
      "@public": [
        "public"
      ],
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "lib/scripts/sitemap-common.js",
  ],
  "exclude": [
    "node_modules"
  ],
}